<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:viewmodels="using:AvaloniaTester.ViewModels.Login"
             x:Class="AvaloniaTester.Views.Login.LoginSecretView" 
			 x:DataType="viewmodels:LoginSecretViewModel">
	<StackPanel Margin="10" Spacing="10">
		<TextBlock Margin="0 20" FontSize="20" FontWeight="Bold">Login Secret</TextBlock>
		<TextBox Text="{Binding Token}" IsReadOnly="True"
				 HorizontalAlignment="Center"
				 TextWrapping="Wrap"
				 Margin="12 5 12 12" MaxWidth="500" />
	</StackPanel>
</UserControl>
